{
  "name": "cap-web-components",
  "version": "1.0.1",
  "description": "Archetype to build web components with legacy browser support",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "demo": "start-storybook -s ./src --ci",
    "demo:build": "build-storybook -s ./src -o catalog",
    "postinstall": "link-module-alias"
  },
  "keywords": [
    "webcomponents",
    "lit-element"
  ],
  "author": "mmirca <marius.mirca@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "lit-element": "^2.2.1",
    "rollup-plugin-livereload": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/html": "^5.3.19",
    "@types/jest": "^25.2.1",
    "babel-jest": "^25.4.0",
    "babel-loader": "^8.1.0",
    "cap-rollup-config": "^1.1.1",
    "jest": "^25.4.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "link-module-alias": "^1.2.0",
    "rollup": "^1.25.2"
  },
  "_moduleAliases": {
    "~root": ".",
    "~core": "./core",
    "~shared": "./shared"
  }
}
